{
  "id": "hello-world",
  "name": "Hello World Plugin",
  "version": "1.0.0",
  "description": "A simple example plugin that demonstrates the MIDE plugin system",
  "author": "MIDE Team",
  "type": "js",
  "main": "index.js",
  "activation_events": ["onStartup"],
  "contributes": {
    "commands": [
      {
        "id": "hello-world.sayHello",
        "title": "Say Hello",
        "category": "Hello World"
      },
      {
        "id": "hello-world.countLines",
        "title": "Count Lines in Active File",
        "category": "Hello World"
      }
    ],
    "keybindings": [
      {
        "command": "hello-world.sayHello",
        "key": "Ctrl+Shift+H"
      }
    ]
  },
  "permissions": ["fs:read", "editor:read"],
  "enabled": true
}
